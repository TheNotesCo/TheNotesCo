!!! 5
%html

  %head
    %meta{ :charset => 'utf-8' }

    %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1.0' }

    %title= content_for?(:title) ? yield(:title) : 'The Notes & Co.'
    = favicon_link_tag 'favicon.ico'

    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tag

  %body
    .top-bar-container{ 'data-sticky-container': ''}
      .sticky{ 'data-options': 'anchor: page; marginTop: 0; stickyOn: small;', 'data-sticky': '' }
        .top-bar
          .top-bar-left
            %ul.dropdown.menu{ 'data-dropdown-menu': '' }
              %li.menu-text The Notes & Co.
              %li
                %a{ href: '#' } Share
              %li
                %a{ href: '#' } Music
              %li
                %a{ href: '#' } Profile
          .top-bar-right
            %ul.menu
              %li
                %input{ placeholder: 'Search', type: 'search' }
              %li
                %button.button{ type: 'button' } Search

    = yield
